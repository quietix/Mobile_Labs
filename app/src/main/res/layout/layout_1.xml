<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/playField">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toggle_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" >


    <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="On"
            android:textOff="Off"
            android:checked="false"
            app:layout_constraintRight_toRightOf="@id/toggle_button_container"
            app:layout_constraintTop_toTopOf="@id/toggle_button_container" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Align Top right corner to Bot right one"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@id/toggle_button_container"
            app:layout_constraintEnd_toStartOf="@+id/toggleButton"
            app:layout_constraintRight_toRightOf="@id/toggle_button"
            app:layout_constraintTop_toTopOf="@id/toggle_button_container"
            android:layout_marginRight="20dp"
            tools:ignore="UnknownId" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:background="#E1D3D3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#7E7C7C"
            android:shadowColor="#635959"
            android:text="Button"
            android:textColorHighlight="#7E7C7C"
            android:textColorLink="#7E7C7C"
            app:layout_constraintLeft_toLeftOf="@id/main_layout"
            app:layout_constraintTop_toTopOf="@id/main_layout"
            app:strokeColor="#7E7C7C" />

        <TextView
            android:id="@+id/text_box_to_move"
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/main_layout"
            app:layout_constraintRight_toRightOf="@id/main_layout"
            android:background="#AEAEAE"
            android:gravity="center"
            android:text="Text"
            tools:layout_editor_absoluteX="200dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/bottom_text"
            app:layout_constraintLeft_toLeftOf="@id/main_layout"
            app:layout_constraintRight_toRightOf="@id/main_layout"
            android:background="#7E7C7C"
            android:text="Button" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/middle_container"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="@id/main_layout"
            app:layout_constraintBottom_toBottomOf="@id/main_layout"
            app:layout_constraintLeft_toLeftOf="@id/main_layout"
            app:layout_constraintRight_toRightOf="@id/main_layout"
            android:background="#67503C"
            android:layout_marginBottom="60dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="@id/middle_container"
                app:layout_constraintRight_toRightOf="@id/middle_container"
                android:background="#AEAEAE"
                android:gravity="center"
                android:text="Text"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="@id/middle_container"
                app:layout_constraintLeft_toLeftOf="@id/middle_container"
                app:layout_constraintRight_toRightOf="@id/middle_container"
                android:background="#AEAEAE"
                android:gravity="center"
                android:text="Text"
                android:textColor="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/bottom_text"
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@id/main_layout"
            app:layout_constraintLeft_toLeftOf="@id/main_layout"
            app:layout_constraintRight_toRightOf="@id/main_layout"
            android:background="#AEAEAE"
            android:gravity="center"
            android:text="Text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>